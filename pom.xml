        <dependency>
            <groupId>jstl</groupId>
            <artifactId>jstl</artifactId>
            <version>1.2</version>
        </dependency>
        <!-- Others -->
        <dependency>
            <groupId>commons-dbcp</groupId><!-- Apache Commons DBCP, JDBC MySQL Datasource -->
            <artifactId>commons-dbcp</artifactId>
